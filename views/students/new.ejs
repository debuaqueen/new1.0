<%- include('../partials/header') %>
<h2>Add New Student</h2>
<form method="POST" action="/students">
  <div><label>Student ID:</label><input type="number" name="studentId" required /></div>
  <div><label>Name:</label><input type="text" name="name" required /></div>
  <div><label>Age:</label><input type="number" name="age" min="16" max="100" required /></div>
  <div><label>Course:</label><input type="text" name="course" required /></div>
  <div><label>Phone:</label><input type="tel" name="tele" pattern="[0-9]{8,}" placeholder="e.g. 91234567" required /></div>
  <div><label>GPA:</label><input type="number" step="0.1" name="gpa" min="0" max="4" required /></div>
  <div><label>Postgraduate?</label><br>
    <input type="radio" name="isPG" value="yes" /> Yes<br>
    <input type="radio" name="isPG" value="no" checked /> No
  </div>
  <br><button type="submit">Add Student</button>
</form>
<a href="/students">Back</a>
